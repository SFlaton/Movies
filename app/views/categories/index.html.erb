<div class="head">
  <h1>Categories</h1>
</div>


<div class='row'>
    <% @categories.each do |category| %>
        <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= category.name %></h3>
            <p><%= link_to 'Show', category, class: "btn btn-default" %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
